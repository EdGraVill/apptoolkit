{
  "name": "root",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "create": "lerna create",
    "postinstall": "lerna bootstrap",
    "prepublish": "lerna run build",
    "publish": "lerna publish --no-private",
    "version": "lerna version",
    "build": "lerna run build",
    "test": "lerna run test",
    "2fa:build": "lerna run build --scope=@apptoolkit/2fa",
    "2fa:test": "lerna run test --scope=@apptoolkit/2fa",
    "2fa:publish": "lerna run publish --no-private --scope=@apptoolkit/2fa",
    "crud:build": "lerna run build --scope=@apptoolkit/crud",
    "crud:test": "lerna run test --scope=@apptoolkit/crud",
    "crud:publish": "lerna run publish --no-private --scope=@apptoolkit/crud",
    "eslint-config:publish": "lerna run publish --no-private --scope=@apptoolkit/eslint-config",
    "form:build": "lerna run build --scope=@apptoolkit/form",
    "form:test": "lerna run test --scope=@apptoolkit/form",
    "form:storybook": "lerna run storybook --scope=@apptoolkit/form",
    "form:test-storybook": "lerna run test-storybook --scope=@apptoolkit/form",
    "form:publish-storybook": "lerna run publish --no-private --scope=@apptoolkit/form",
    "jwt:build": "lerna run build --scope=@apptoolkit/jwt",
    "jwt:test": "lerna run test --scope=@apptoolkit/jwt",
    "jwt:publish": "lerna run publish --no-private --scope=@apptoolkit/jwt",
    "rsa:build": "lerna run build --scope=@apptoolkit/rsa",
    "rsa:test": "lerna run test --scope=@apptoolkit/rsa",
    "rsa:publish": "lerna run publish --no-private --scope=@apptoolkit/rsa",
    "ui:build": "lerna run build --scope=@apptoolkit/form",
    "ui:test": "lerna run test --scope=@apptoolkit/form",
    "ui:storybook": "lerna run storybook --scope=@apptoolkit/form",
    "ui:test-storybook": "lerna run test-storybook --scope=@apptoolkit/form",
    "ui:publish-storybook": "lerna run publish --no-private --scope=@apptoolkit/form"
  },
  "devDependencies": {
    "lerna": "^5.4.3"
  }
}
